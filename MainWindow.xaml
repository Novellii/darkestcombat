<Window x:Class="DarkestCombat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DarkestCombat"
        mc:Ignorable="d"
        Title="Batalha contra o zikavírus" Height="458" Width="666" Background="Black">
    <Grid Margin="10,10,10,-6">
        <Grid HorizontalAlignment="Center" Height="418" VerticalAlignment="Center" Width="632">
            <Image HorizontalAlignment="Center" Height="319" VerticalAlignment="Top" Width="632" Source="/Background.png" Stretch="Fill" Margin="0,-15,0,0"/>
            <Rectangle HorizontalAlignment="Left" Height="156" Margin="10,242,0,0" Stroke="White" VerticalAlignment="Top" Width="154" Fill="#FF1D1D1D"/>
            <Image Margin="44,23,458,194" Source="/CrusaderIndle.png"/>
            <Button x:Name="Atacar" Content="Atacar" HorizontalAlignment="Left" Margin="20,251,0,0" VerticalAlignment="Top" Height="46" Width="134" Click="AtackButton" BorderBrush="White" Background="#FF202020" Foreground="White"/>
            <Button x:Name="Defender" Content="Defender" HorizontalAlignment="Left" Margin="20,302,0,0" VerticalAlignment="Top" Height="41" Width="134" Click="DefenderButton" Background="#FF202020" Foreground="White" BorderBrush="White"/>
            <Button x:Name="Curar" Content="Curar-se" HorizontalAlignment="Left" Margin="20,349,0,0" VerticalAlignment="Top" Height="41" Width="134" Click="CurarButton" Foreground="White" BorderBrush="White" Background="#FF202020"/>
            <Rectangle HorizontalAlignment="Left" Height="156" Margin="171,242,0,0" Stroke="White" VerticalAlignment="Top" Width="453" Fill="#FF1D1D1D"/>
            <Label Content="Soul of Cinder" HorizontalAlignment="Left" Margin="266,260,0,0" VerticalAlignment="Top" Width="128" Foreground="#FF8C030E" FontWeight="Bold" FontFamily="Sitka Text Semibold" FontSize="16"/>
            <ProgressBar x:Name="VidaPlayer" HorizontalAlignment="Left" Height="10" Margin="54,224,0,0" VerticalAlignment="Top" Width="110" Value="100" ValueChanged="VidaPlayer_ValueChanged" Foreground="#FF8C030E" BorderBrush="Black" Background="Black"/>
            <ProgressBar x:Name="VidaInimigo" HorizontalAlignment="Left" Height="10" Margin="344,224,0,0" VerticalAlignment="Top" Width="265" Value="100" Foreground="#FF8C030E" BorderBrush="#FF0C0C0C" Background="Black"/>
            <Label Content="Abysswalker" HorizontalAlignment="Right" Margin="0,279,246,0" VerticalAlignment="Top" Width="120" Foreground="#FF8C030E" FontWeight="Bold" FontFamily="Sitka Text Semibold" FontSize="16"/>
            <Label Content="Vida:" HorizontalAlignment="Left" Margin="182,322,0,0" VerticalAlignment="Top" Foreground="#FF8C030E" FontFamily="Sitka Text Semibold" FontSize="16"/>
            <Label Content="Defesa:" HorizontalAlignment="Left" Margin="182,344,0,0" VerticalAlignment="Top" Foreground="#FFC35757" FontFamily="Sitka Text Semibold" FontSize="16"/>
            <Label x:Name="VidaAtualConteudo" Content="1000" HorizontalAlignment="Left" Margin="242,322,0,0" VerticalAlignment="Top" Foreground="#FF8C030E" FontFamily="Sitka Text Semibold" FontSize="16"/>
            <Label x:Name="DefesaConteudo" Content="1000" HorizontalAlignment="Left" Margin="242,344,0,0" VerticalAlignment="Top" Foreground="#FFC35757" FontSize="16" FontFamily="Sitka Text Semibold"/>
            <Label Content="/" HorizontalAlignment="Left" Margin="284,322,0,0" VerticalAlignment="Top" Foreground="#FF8C030E" FontFamily="Sitka Text Semibold" FontSize="16"/>
            <Label x:Name="VidaMaximaConteudo" Content="1000" HorizontalAlignment="Left" Margin="302,322,0,0" VerticalAlignment="Top" Foreground="#FF8C030E" FontFamily="Sitka Text Semibold" FontSize="16"/>
            <Rectangle HorizontalAlignment="Left" Height="139" Margin="416,251,0,0" Stroke="#FF940808" VerticalAlignment="Top" Width="85"/>
            <Rectangle HorizontalAlignment="Left" Height="139" Margin="522,250,0,0" Stroke="#FF940808" VerticalAlignment="Top" Width="78"/>
            <Button x:Name="EspadaButton" Content="Espada Infernal" HorizontalAlignment="Left" Margin="416,370,0,0" VerticalAlignment="Top" Width="85" Click="TrocarEspada" Background="#FF980000" Foreground="White"/>
            <Button x:Name="LancaButton" Content="Lança Infernal" HorizontalAlignment="Left" Margin="522,369,0,0" VerticalAlignment="Top" Width="78" Click="TrocarLanca" Background="#FF980000" Foreground="White"/>
            <Image HorizontalAlignment="Left" Height="238" Margin="344,-15,0,0" VerticalAlignment="Top" Width="263" Source="/HeartOfDarkness.png" Stretch="Fill"/>
            <Image HorizontalAlignment="Left" Height="118" Margin="530,251,0,0" VerticalAlignment="Top" Width="62" Source="/Spear.png" Stretch="Fill"/>
            <Image HorizontalAlignment="Left" Height="118" Margin="428,252,0,0" VerticalAlignment="Top" Width="62" Source="/Sword.png" Stretch="Fill"/>
            <Image HorizontalAlignment="Left" Height="66" Margin="182,252,0,0" VerticalAlignment="Top" Width="69" RenderTransformOrigin="0.5,0.5" Source="/Crusader_portrait.png">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.145"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.081"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Label Content="Frascos:" HorizontalAlignment="Left" Margin="182,365,0,0" VerticalAlignment="Top" Foreground="#FFC35757" FontFamily="Sitka Text Semibold" FontSize="16"/>
            <Label x:Name="FrascosQuant" Content="15" HorizontalAlignment="Left" Margin="250,365,0,0" VerticalAlignment="Top" Foreground="#FFC35757" FontSize="16" FontFamily="Sitka Text Semibold"/>

        </Grid>
    </Grid>
</Window>
